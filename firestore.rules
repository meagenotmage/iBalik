rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Username collection - allow read for username availability check during signup
    match /usernames/{username} {
      allow read: if true;  // Allow anyone to check if username exists
      allow write: if request.auth != null;  // Only authenticated users can create/update
    }
    
    // All other collections require authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
